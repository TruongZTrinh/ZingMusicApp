<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <View
        android:background="@drawable/custom_background_banner"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp">
    </View>
    <ImageView
        android:id="@+id/imageViewBackgroundPlaylist"
        android:scaleType="fitCenter"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp">
    </ImageView>
    <ImageView
        android:id="@+id/imageViewPlaylist"
        android:layout_alignBottom="@id/imageViewBackgroundPlaylist"
        android:layout_marginLeft="15dp"
        android:layout_marginBottom="5dp"
        android:elevation="5dp"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:scaleType="fitXY">
    </ImageView>
    <TextView
        android:id="@+id/textViewTenPlaylist"
        android:text="Top 100 bài hit Việt Nam"
        android:textSize="13sp"
        android:layout_toRightOf="@id/imageViewPlaylist"
        android:layout_alignBottom="@id/imageViewPlaylist"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:layout_marginRight="50dp"
        android:layout_marginBottom="5dp"
        android:maxLines="1"
        android:ellipsize="end"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
    </TextView>

</RelativeLayout>